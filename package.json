{
    "name": "ts-tree-climber",
    "version": "1.0.0",
    "description": "Manage and navigate tree structures in TypeScript (JavaScript).",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "jest --config jestconfig.json",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "tree",
        "typescript",
        "hierarchy",
        "model",
        "data structure",
        "data"
    ],
    "author": "Andrei Ksianzou",
    "license": "MIT",
    "repository": "https://github.com/mulatmar/ts-tree-climber",
    "bugs": "https://github.com/mulatmar/ts-tree-climber/issues",
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "ts-jest": "^26.4.4",
        "ts-loader": "^8.0.14",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.1.3"
    }
}
